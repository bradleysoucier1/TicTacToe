rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isPlayer(data) {
      return data.players.X == request.auth.uid || data.players.O == request.auth.uid;
    }

    function hasValidBoard(data) {
      return data.board is list && data.board.size() == 9;
    }

    function isSeatClaimUpdate() {
      return (
        (
          resource.data.players.X == null
          && request.resource.data.players.X == request.auth.uid
          && request.resource.data.players.O == resource.data.players.O
        )
        || (
          resource.data.players.O == null
          && request.resource.data.players.O == request.auth.uid
          && request.resource.data.players.X == resource.data.players.X
        )
      )
        && request.resource.data.board == resource.data.board
        && request.resource.data.turn == resource.data.turn
        && request.resource.data.winner == resource.data.winner
        && request.resource.data.createdBy == resource.data.createdBy
        && request.resource.data.createdAt == resource.data.createdAt
        && request.resource.data.status in ['waiting', 'active'];
    }

    match /games/{gameId} {
      allow read: if isSignedIn();

      allow create: if isSignedIn()
        && request.resource.data.createdBy == request.auth.uid
        && request.resource.data.turn == 'X'
        && request.resource.data.status == 'waiting'
        && request.resource.data.winner == null
        && hasValidBoard(request.resource.data);

      allow update: if isSignedIn()
        && hasValidBoard(request.resource.data)
        && request.resource.data.turn in ['X', 'O']
        && request.resource.data.status in ['waiting', 'active', 'won', 'draw']
        && request.resource.data.createdBy == resource.data.createdBy
        && request.resource.data.createdAt == resource.data.createdAt
        && (
          (isPlayer(resource.data) && request.resource.data.players == resource.data.players)
          || isSeatClaimUpdate()
        );

      allow delete: if false;
    }
  }
}
